<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digywood.cineauditions">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cinesooru_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="false"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OTPEntryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="false"
            android:label="@string/title_activity_otpentry"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ViewAdvtInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LandingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdvtInfoScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewInterestAdInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListofInterests"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RespondAvtInfo"
            android:label="@string/title_activity_respond_avt_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyFolioActivity"
            android:label="@string/title_activity_my_folio"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>