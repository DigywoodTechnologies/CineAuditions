<RelativeLayout
    android:id="@+id/fullscreen_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.digywood.cineauditions.OTPEntryActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:text="CineAuditions"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_verifytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appName"
        android:layout_gravity="bottom"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="Mobile Verification"
        android:textColor="#1c1bf2"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_verifytitle"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOBILE:"
                android:textColor="#1c1bf2"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv1_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="20dp"
                android:textColor="#1c1bf2"
                />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/appName">

            <EditText
                android:id="@+id/et1_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_phno"
                android:height="35dp"
                android:background="@drawable/custom_edittext"
                android:hint="OTP"
                android:inputType="number"
                android:textColor="#000000" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/otp_submit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="33dp"
                android:background="@drawable/custom_button"
                android:text="Submit"
                android:textColor="@drawable/custom_text" />
            <Button
                android:id="@+id/otp_cancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/custom_button"
                android:text="Cancel"
                android:textColor="@drawable/custom_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1c1bf2"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1c1bf2"
                android:textSize="18dp"
                android:visibility="invisible"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
